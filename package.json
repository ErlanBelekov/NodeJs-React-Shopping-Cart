{
  "name": "shopping-list",
  "version": "1.0.0",
  "description": "A basic web app built on top of the MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install":"npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild":"NPM_CONFOG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Erlan Belekov",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.1",
    "express": "^4.16.3",
    "mongoose": "^5.2.5"
  },
  "devDependencies": {
    "nodemon": "^1.18.3"
  }
}
